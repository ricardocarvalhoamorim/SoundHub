<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.soundhub.ricardo.soundhub.activities.SettingsActivity">

        <ImageView
            android:contentDescription="app icon"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />

        <TextView
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/fab_material_grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey! You're awesome! Thanks for using this app!"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/fab_material_grey_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is an extremely, utterly simple app. I made it mainly to try out the new google gimmicks, but also to embrace music streaming without any hassles, ideally to play background music for parties (hehe). Well if you have any feedback or feature-request (keep in mind that this is intended to be simple, and that I have a full time job), please share it with me!
            \n\nI will continue to improve the overall experience of the app, so stay tuned for future updates!"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fab_material_blue_grey_500"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/fab_material_grey_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Many thanks to..."
            android:gravity="center"
            />

        <TextView
            android:id="@+id/settings_libraries"
            android:layout_marginTop="15dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/fab_material_grey_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/fab_material_grey_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anyway, my source code is available at GitHub. Feel free to check it out"
            />

    </LinearLayout>
</ScrollView>