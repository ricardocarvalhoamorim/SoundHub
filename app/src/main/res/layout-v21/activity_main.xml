<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:id="@+id/playback_progress"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:progress="87"
        />

    <LinearLayout
        android:id="@+id/player_header"
        android:layout_below="@id/playback_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >
        <TextView
            android:id="@+id/player_status_small"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/fab_material_orange_900"
            android:text="Hey there!"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:maxLines="2"
            android:minHeight="40dp"
            android:layout_weight=".69"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/player_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/primary"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/track_cover"
                android:layout_gravity="center"
                android:src="@drawable/fab_plus_icon"
                android:adjustViewBounds="true"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"/>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/player_status"
                    android:layout_width="match_parent"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/fab_material_orange_900"
                    android:text="Hey there!"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/player_status_tags"
                    android:layout_width="match_parent"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/fab_material_orange_900"
                    android:text="Tags"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/player_status_favoritings"
                    android:layout_width="match_parent"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/fab_material_orange_900"
                    android:text="Favoritings"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_below="@id/player_header"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity" tools:ignore="MergeRootFrame" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.software.shell.fab.ActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/action_button_skip"
            fab:type="mini"
            android:layout_gravity="center_horizontal"
            fab:button_color="@color/fab_material_teal_500"
            fab:button_colorPressed="@color/fab_material_teal_900"
            fab:image="@android:drawable/ic_media_next"
            fab:image_size="24dp"
            fab:show_animation="@anim/fab_roll_from_right"
            fab:hide_animation="@anim/fab_roll_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            fab:stroke_color="@color/fab_material_teal_900"
            fab:stroke_width="1.0dp"
            />

        <com.software.shell.fab.ActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/action_button_play"
            fab:type="DEFAULT"
            fab:button_color="@color/fab_material_teal_500"
            fab:button_colorPressed="@color/fab_material_teal_900"
            fab:image="@android:drawable/ic_media_pause"
            fab:image_size="24dp"
            fab:show_animation="@anim/fab_roll_from_right"
            fab:hide_animation="@anim/fab_roll_to_right"
            android:layout_width="wrap_content"
            fab:stroke_color="@color/fab_material_teal_900"
            fab:stroke_width="1.0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            />

    </LinearLayout>

</RelativeLayout>